@model Models.BlogViewModels.ListCommentsViewModel

@if (Model?.Comments?.Count > 0)
{
    foreach (var comment in Model.Comments.OrderByDescending(c => c.Date))
    {
        <div class="modal-body form-horizontal">
            <div class="row">
                <div class="col-md-1 mb-1">
                    <img gravatar-hash="@comment.GravatarHashId" />
                </div>
                <div class="col-md-11 mb-5">
                    <div class="row">
                        <div class="col-md-6 mb-3 text-dark">
                            <a href="@comment.HomePageUrl"><strong>@comment.Name</strong></a>
                        </div>
                        <div class="col-md-6 mb-3 text-muted navbar-right">
                            <i class="navbar-right">@comment.Date.ToString("MMMM dd, yyyy H:mm")</i>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-6">
                            @comment.Text
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div>
        <p>Be the first to comment...</p>
    </div>
}
